<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.miguel.jogoheroisvsbestas.controller.BattleController" stylesheets="../style.css">

    <top>
        <HBox spacing="20" alignment="CENTER" padding="10">
            <VBox spacing="10" style="-fx-border-color: #3498db; -fx-border-width: 2; -fx-border-radius: 5;"
                  padding="10" styleClass="hero-panel">
                <Label text="Adicionar Herói" style="-fx-font-weight: bold; -fx-font-size: 14;" />

                <ComboBox fx:id="heroTypeCombo" promptText="Tipo de Herói">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Elfo"/>
                            <String fx:value="Hobbit"/>
                            <String fx:value="Humano"/>
                        </FXCollections>
                    </items>
                </ComboBox>

                <TextField fx:id="heroNameField" promptText="Nome"/>
                <TextField fx:id="heroHealthField" promptText="Pontos de Vida"/>
                <TextField fx:id="heroArmorField" promptText="Armadura"/>

                <Button text="Adicionar Herói" onAction="#addHero" style="-fx-base: #3498db;"/>
            </VBox>


            <VBox spacing="10" style="-fx-border-color: #e74c3c; -fx-border-width: 2; -fx-border-radius: 5;"
                  padding="10" styleClass="beast-panel">
                <Label text="Adicionar Besta" style="-fx-font-weight: bold; -fx-font-size: 14;"/>

                <ComboBox fx:id="beastTypeCombo" promptText="Tipo de Besta">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Orque"/>
                            <String fx:value="Troll"/>
                        </FXCollections>
                    </items>
                </ComboBox>

                <TextField fx:id="beastNameField" promptText="Nome"/>
                <TextField fx:id="beastHealthField" promptText="Pontos de Vida"/>
                <TextField fx:id="beastArmorField" promptText="Armadura"/>

                <Button text="Adicionar Besta" onAction="#addBeast" style="-fx-base: #e74c3c;"/>
            </VBox>

        </HBox>
    </top>

    <center>
        <ScrollPane>
            <TextArea fx:id="battleLogArea" editable="false" wrapText="true"
                      style="-fx-font-family: 'Courier New'; -fx-font-size: 12;"/>
        </ScrollPane>
    </center>

    <bottom>
        <HBox spacing="20" alignment="CENTER" padding="10">
            <Button text="Iniciar Batalha" onAction="#startBattle" style="-fx-font-size: 16; -fx-padding: 10 20;"/>
            <Button text="Reiniciar" onAction="#reset" style="-fx-font-size: 16; -fx-padding: 10 20;"/>
        </HBox>
    </bottom>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>


</BorderPane>